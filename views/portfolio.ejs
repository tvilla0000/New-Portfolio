          <h2 style="margin-top: 25px">
            <img class="project-cover" src="<%= p.imgUrl %>" />
          </h2>
          <h1 id="<%= p.id %>"><%= p.name %></h1>
          <hr />
          <p>
            <%= p.description %>
          </p>
          <ul class="tech-list">
            <% p.technology.forEach(t => { %>
            <li class="tech-list-item">
              <img class="tech-img" id="t.id" src="<%= t.techImgUrl%>" /><%=
              t.name %>
            </li>
            <% }) %>
          </ul>
          <div class="icons">
            <a href=""><i class="fa fa-github w3-xxlarge icon-white"></i></a>
            <a href=""><i class="fa fa-external-link w3-xxlarge"></i></a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

