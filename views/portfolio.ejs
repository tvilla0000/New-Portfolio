  <div class="main">
    <div class="header"><h1>My Work</h1></div>
    <div class="container-portfolio">
      <% projects.map(p => { %>
      <div class="box" id="<%= p.id %>">
        <div id="skills-top-border"></div>
        <div id="skills-right-border"></div>
        <div id="skills-left-border"></div>
        <div id="skills-bottom-border"></div>
